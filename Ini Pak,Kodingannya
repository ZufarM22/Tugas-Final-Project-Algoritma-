#include <iostream>
    using namespace std;

int main() {
    // Variabel menu
    string namaMenu[4] = { "Batagor Ikan", "Batagor Ayam", "Otak-otak", "Siomay" };
    int hargaMenu[4] = { 10000, 12000, 5000, 10000 };
    int stokMenu[4] = { 50, 30, 100, 70 };
    int terjualMenu[4] = { 0, 0, 0, 0 };
    int favoritMenu[4] = { 0, 0, 0, 0 };

    // Proses pesanan
    stokMenu[0] -= 3;
    terjualMenu[0] += 3;
    favoritMenu[0] += 3;

    stokMenu[2] -= 5;
    terjualMenu[2] += 5;
    favoritMenu[2] += 5;

    // Tampilkan menu
    cout << "Menu:" << endl;
    for (int i = 0; i < 4; i++) {
        cout << namaMenu[i] << ": Price = " << hargaMenu[i] << ", Stock = " << stokMenu[i] << endl;
    }

    // Tampilkan waktu istirahat
    cout << "Break time set to: 12:30 PM" << endl;

    // Tampilkan pesanan
    cout << "Order processed for 3 Batagor Ikan" << endl;
    cout << "Order processed for 5 Otak-otak" << endl;

    // Tampilkan perubahan harga
    cout << "Price for Siomay updated to: 10000" << endl;

    // Tampilkan menu lagi
    cout << "Menu:" << endl;
    for (int i = 0; i < 4; i++) {
        cout << namaMenu[i] << ": Price = " << hargaMenu[i] << ", Stock = " << stokMenu[i] << endl;
    }

    // Tampilkan total penjualan
    int totalPenjualan = 0;
    cout << "Total Sales:" << endl;
    for (int i = 0; i < 4; i++) {
        cout << namaMenu[i] << ": " << terjualMenu[i] << " sold" << endl;
        totalPenjualan += terjualMenu[i] * hargaMenu[i];
    }

    // Tampilkan menu favorit
    cout << "Menu Favorites:" << endl;
    for (int i = 0; i < 4; i++) {
        cout << namaMenu[i] << ": " << favoritMenu[i] << " times ordered" << endl;
    }

    // Tampilkan total pendapatan
    cout << "Total Pendapatan: " << totalPenjualan << endl;

    return 0;
}
